{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid main-container">
        <div class="col-md-2 sidebar">
            <div class="row">
                <!-- Sidebar menu -->
                <div class="side-menu">
                    <nav class="navbar navbar-default" role="navigation" style="border: 1px solid #3071aa;border-radius: 4px;">
                        <div class="side-menu-container">
                            <ul class="nav navbar-nav"  id="myUL" >
                                {% for category in categories %}
                                    <li class="panel panel-default" id="dropdown">
                                        <a data-toggle="collapse" href="#dropdown-lvl{{ category.id }}">
                                            <span class="glyphicon glyphicon-chevron-right"></span> {{ category.name }}{# <span class="caret"></span>#}
                                        </a>

                                        <!-- Dropdown level 1 -->
                                        <div id="dropdown-lvl{{ category.id }}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul class="nav navbar-nav">
                                                    {% for subcategory in category.subcategory %}
                                                        <li><a href="#">{{ subcategory.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <div class="col-md-9 ">
            <div class="panel  panel-primary">
                <div class="panel-heading text-center">
                    CategorieÃ«n
                </div>
                <div class="panel-body">
                    {% for category in categories %}
                        <div class="col-md-3" style="height:210px">
                            <a href="{{ path('category_subcategory', {'id': category.id}) }}">
                                <img src="{{ asset('uploads/' ~ category.imageName) }}" width="160px">
                            </a>
                        </div>
                    {% endfor %}
                </div>


                <nav aria-label="Page navigation">
                    <div class="text-center">
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>

{% endblock %}
