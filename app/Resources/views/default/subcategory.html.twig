{% extends 'base.html.twig' %}
{% block title %}MyPhotoFrameOnline.com - Subcategorie{% endblock %}
{% block body %}

    <div class="container-fluid main-container">
        <div class="col-md-2 sidebar">
            <div class="row">
                <!-- Sidebar menu -->
                <div class="side-menu">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="side-menu-container">
                            <ul class="nav navbar-nav"  id="myUL" >
                                {% for category in categoriesmenu|sortbyfield('name') %}
                                    <li class="panel panel-default" id="dropdown">
                                        <a data-toggle="collapse" href="#dropdown-lvl{{ category.id }}">
                                            <span class="glyphicon glyphicon-menu-down"></span> {{ category.name }}
                                        </a>

                                        <!-- Dropdown level 1 -->
                                        <div id="dropdown-lvl{{ category.id }}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul class="nav navbar-nav">
                                                    {% for subcategory in category.subcategory|sortbyfield('name')  %}
                                                        <li><a href="{{ path('subcategory_frame', {'id': subcategory.id}) }}"><span class="glyphicon glyphicon-menu-right"></span> {{ subcategory.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Subcategory Display -->
        <div class="col-md-10 ">
            <div class="panel  panel-primary">
                <div class="panel-heading text-center">
                    {% for category in categories %}  SubcategorieÃ«n in {{ category.name }}   {% endfor %}
                </div>
                <div class="panel-body">
                    {% for category in categories %}
                        {% for subcategory in category.subcategory| sortbyfield('name') %}

                            <div class="col-md-3" style="height:210px">
                                <a href="{{ path('subcategory_frame', {'id': subcategory.id}) }}">
                                    <img src="{{ asset('uploads/' ~ subcategory.imageName) }}" width="160px">
                                </a>
                              {#  <p>Downloads: <span class="label label-primary">{{ subcategory.id }}x</span></p>#}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <div class="text-center">
                        <ul class="pagination">
                            {#{{ knp_pagination_render(categories) }}#}
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
    </div>
{% endblock %}
