{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid main-container">
        <div class="col-md-2 sidebar">
            <div class="row">
                <!-- uncomment code for absolute positioning tweek see top comment in css -->
                <div class="absolute-wrapper"> </div>
                <!-- Menu -->

                <div class="side-menu">
                    <nav class="navbar navbar-default" role="navigation" style="border: 1px solid #3071aa;border-radius: 4px;">
                        <!-- Main Menu -->
                        <div class="side-menu-container">
                            <ul class="nav navbar-nav"  id="myUL" >
                                {% for category in categoriesmenu %}
                                    <li class="panel panel-default" id="dropdown">
                                        <a data-toggle="collapse" href="#dropdown-lvl{{ category.id }}">
                                            <span class="glyphicon glyphicon-chevron-right"></span> {{ category.name }}{# <span class="caret"></span>#}
                                        </a>

                                        <!-- Dropdown level 1 -->
                                        <div id="dropdown-lvl{{ category.id }}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul class="nav navbar-nav">
                                                    {% for subcategory in category.subcategory %}
                                                        <li><a href="{{ path('subcategory_frame', {'id': subcategory.id}) }}">{{ subcategory.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>

                </div>
            </div>  		</div>
        <div class="col-md-10 ">
            <div class="panel  panel-primary">
                <div class="panel-heading text-center">
                    SubcategorieÃ«n
                </div>
                <div class="panel-body">

                    {% for category in categories %}
                        {% for subcategory in category.subcategory %}
                            <div class="col-md-3" style="height:210px">
                                <a href="{{ path('subcategory_frame', {'id': subcategory.id}) }}">
                                    <img src="{{ asset('uploads/' ~ subcategory.imageName) }}" width="160px">
                                </a>
                                <p>Downloads: <span class="label label-primary">{{ subcategory.id }}x</span></p>
                            </div>
                        {% endfor %}
                    {% endfor %}



                </div>
                <nav aria-label="Page navigation">
                    <div class="text-center">
                        <ul class="pagination">
                            {#{{ knp_pagination_render(categories) }}#}
                        </ul>
                    </div>
                </nav>
            </div>

        </div>
    </div>


{% endblock %}
