{% extends 'base.html.twig' %}
{% block title %}MyPhotoFrameOnline.com - Frames{% endblock %}
{% block body %}

    <div class="container-fluid main-container">
        <div class="col-md-2 sidebar">
            <div class="row">
                <!-- Sidebar menu -->
                <div class="side-menu">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="side-menu-container">
                            <ul class="nav navbar-nav"  id="myUL" >
                                {% for category in categoriesmenu|sortbyfield('name') %}
                                    <li class="panel panel-default" id="dropdown">
                                        <a data-toggle="collapse" href="#dropdown-lvl{{ category.id }}">
                                            <span class="glyphicon glyphicon-menu-down"></span> {{ category.name }}
                                        </a>

                                        <!-- Dropdown level 1 -->
                                        <div id="dropdown-lvl{{ category.id }}" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul class="nav navbar-nav">
                                                    {% for subcategory in category.subcategory|sortbyfield('name')  %}
                                                        <li><a href="{{ path('subcategory_frame', {'id': subcategory.id}) }}"><span class="glyphicon glyphicon-menu-right"></span> {{ subcategory.name }}</a></li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Frames Display -->
        <div class="col-md-10 ">
            <div class="panel  panel-primary">
                <div class="panel-heading text-center">
                    {% for subcategory in subcategories %} Frames in {{ subcategory.name }}  {% endfor %}
                </div>
                <div class="panel-body">
                    <div class="col-md-12">

                        {% for subcategory in subcategories %}
                        {% for frame in subcategory.frame %}
                            <div class="col-sm-4" style="height: 443px;">
                                <div class="thumbnail">
                                    <a href="{{ path('frames_frame', {'id': frame.id}) }}">
                                        <img id="myImage" src="{{ asset('uploads/' ~ frame.imageName) }}" >
                                    </a>
                                    <div class="caption">
                                        <p>Grootte: {{ frame.imageWidth }}x{{ frame.imageHeight }}px </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <div class="text-center">
                        <ul class="pagination">
                            {{ knp_pagination_render(subcategories) }}
                        </ul>
                    </div>
                </nav>

            </div>
        </div>
    </div>

    <!-- Social Media -->
    <div class="container" style="padding-bottom: 1%;">
        <div class="text-center center-block">
            {% for social in socials %}
                <a href="{{ social.url }}" target="_blank"><img width="20px" src="{{ asset('uploads/' ~ social.imageName) }}"></a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
